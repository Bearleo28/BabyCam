<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/dv_icon"
        android:label="Dexter Vision"
        android:roundIcon="@mipmap/dv_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        tools:ignore="ObsoleteSdkInt"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Dexter Vision"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".CameraActivity" />
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".AdminActivity"/>
        <service android:name=".MonitorService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback|connectedDevice"/>
    </application>

</manifest>